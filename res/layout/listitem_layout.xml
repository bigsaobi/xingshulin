<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/listitem_layout_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="2dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/listitem_layout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/listitem_layout_image"
        android:padding="2dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <com.example.weibotest.view.QTextView
        android:id="@+id/listitem_layout_msgcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listitem_layout_title"
        android:layout_toRightOf="@id/listitem_layout_image"
        android:autoLink="web"
        android:focusable="false"
        android:lines="2"
        android:padding="2dp"
        android:textColor="@color/blackgray"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/listitem_layout_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:autoLink="web"
        android:lines="2"
        android:padding="2dp"
        android:textColor="@color/blackgray"
        android:textSize="15sp" />

</RelativeLayout>